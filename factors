#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int p;
    int q;
} Factorization;

Factorization factorize(int number) {
    Factorization result = {1, number};

    for (int i = 2; i < number; i++) {
        if (number % i == 0) {
            result.p = i;
            result.q = number / i;
            break;
        }
    }

    return result;
}

int main(int argc, char *argv[]) {
    if (argc != 2) {
        fprintf(stderr, "Usage: %s <file>\n", argv[0]);
        return EXIT_FAILURE;
    }

    char *input_file = argv[1];
    FILE *file = fopen(input_file, "r");

    if (file == NULL) {
        fprintf(stderr, "Error: File '%s' not found.\n", input_file);
        return EXIT_FAILURE;
    }

    int number;
    while (fscanf(file, "%d", &number) != EOF) {
        Factorization result = factorize(number);
        printf("%d=%d*%d\n", number, result.p, result.q);
    }

    fclose(file);
    return EXIT_SUCCESS;
}

